---
const navItems = [
  { name: 'Home', href: '/' },
  { name: 'Talent', href: '/talent' },
  { name: 'How It Works', href: '/how-it-works' },
  { name: 'Partners', href: '/partners' },
  { name: 'About', href: '/about' },
  { name: 'Insights', href: '/blog' },
  { name: 'Contact', href: '/contact' }
];

const { pathname } = Astro.url;
---

<header class="bg-white sticky top-0 z-50 border-b border-gray-200">
  <nav class="max-w-screen-xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo and Brand Name -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center space-x-3 group">
          <!-- The logo image from your public folder -->
          <img 
            src="/maxsys-logo.png" 
            alt="Maxsys International Logo" 
            class="h-10 w-auto object-contain"
            width="40"
            height="40"
          />
          <!-- The styled text next to the logo -->
          <div class="flex flex-col">
            <span class="text-2xl font-bold text-gray-900 leading-tight">Maxsys</span>
            <span class="text-sm text-gray-500 leading-tight tracking-wide">International</span>
          </div>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center space-x-2">
        {navItems.map((item) => (
          <a 
            href={item.href}
            class:list={[
              "px-4 py-2 rounded-md text-sm font-medium transition-colors duration-200",
              pathname === item.href 
                ? 'bg-primary-50 text-primary-600' 
                : 'text-gray-600 hover:bg-gray-100 hover:text-gray-900'
            ]}
          >
            {item.name}
          </a>
        ))}
      </div>

      <!-- Right Side Actions -->
      <div class="hidden lg:flex items-center space-x-4">
        <!-- Login Dropdown -->
        <div class="relative">
          <button 
            type="button" 
            id="desktop-login-button"
            class="bg-gray-50 hover:bg-gray-100 text-gray-700 px-4 py-2 rounded-lg text-sm font-medium transition-colors duration-200 flex items-center space-x-2"
            aria-expanded="false"
            aria-controls="desktop-login-menu"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
            <span>Login</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
          </button>
          
          <div id="desktop-login-menu" class="absolute right-0 mt-2 w-56 bg-white rounded-xl shadow-lg border border-gray-100 hidden z-50 origin-top-right">
            <div class="py-2">
              <a href="https://hub.maxsys.org/wp-login.php" target="_blank" rel="noopener noreferrer" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">Hub Portal (Freelancers)</a>
              <a href="https://hrm.maxsys.org/wp-login.php" target="_blank" rel="noopener noreferrer" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">HRM Portal (Partners)</a>
            </div>
          </div>
        </div>

        <!-- Donate Button -->
        <a href="/donate" class="bg-primary-600 hover:bg-primary-700 text-white px-5 py-2 rounded-lg text-sm font-semibold transition-colors shadow-sm hover:shadow-md">
          Donate Now
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <div class="lg:hidden">
        <button id="mobile-menu-button" type="button" class="bg-gray-100 p-2 rounded-lg text-gray-700 hover:text-primary-600 focus:outline-none focus:ring-2 focus:ring-primary-500" aria-controls="mobile-menu" aria-expanded="false">
          <span class="sr-only">Open main menu</span>
          <svg id="menu-open-icon" class="block h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
          <svg id="menu-close-icon" class="hidden h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path></svg>
        </button>
      </div>
    </div>
  </nav>

  <!-- Mobile Menu Panel -->
  <div id="mobile-menu" class="hidden lg:hidden">
    <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 border-t border-gray-200">
      {navItems.map((item) => (
        <a href={item.href} class:list={[
          "block px-3 py-3 rounded-lg text-base font-medium transition-colors",
          pathname === item.href ? 'bg-primary-50 text-primary-700' : 'text-gray-700 hover:bg-gray-50'
        ]}>{item.name}</a>
      ))}
      <div class="border-t border-gray-200 pt-4 mt-3 space-y-1">
        <a href="https://hub.maxsys.org/wp-login.php" target="_blank" rel="noopener noreferrer" class="text-gray-700 hover:bg-gray-50 block px-3 py-3 rounded-lg text-base font-medium">Hub Portal Login</a>
        <a href="https://hrm.maxsys.org/wp-login.php" target="_blank" rel="noopener noreferrer" class="text-gray-700 hover:bg-gray-50 block px-3 py-3 rounded-lg text-base font-medium">HRM Portal Login</a>
      </div>
      <div class="pt-4 mt-3">
        <a href="/donate" class="bg-primary-600 text-white block w-full text-center px-4 py-3 rounded-lg text-base font-semibold hover:bg-primary-700">Donate Now</a>
      </div>
    </div>
  </div>
</header>

<script>
  function setupMenu(buttonId: string, menuId: string) {
    const button = document.getElementById(buttonId);
    const menu = document.getElementById(menuId);
    const openIcon = document.getElementById('menu-open-icon');
    const closeIcon = document.getElementById('menu-close-icon');

    if (!button || !menu) return;

    const toggleMenu = (event?: MouseEvent) => {
      event?.stopPropagation();
      const isHidden = menu.classList.toggle('hidden');
      button.setAttribute('aria-expanded', String(!isHidden));
      if (openIcon && closeIcon) {
        openIcon.classList.toggle('hidden', !isHidden);
        closeIcon.classList.toggle('hidden', isHidden);
      }
    };

    button.addEventListener('click', toggleMenu);
    
    // Close dropdown when clicking outside
    if (menuId.includes('login')) {
      document.addEventListener('click', (event) => {
        if (!menu.classList.contains('hidden') && !button.contains(event.target as Node) && !menu.contains(event.target as Node)) {
          toggleMenu();
        }
      });
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    setupMenu('mobile-menu-button', 'mobile-menu');
    setupMenu('desktop-login-button', 'desktop-login-menu');
  });
</script>

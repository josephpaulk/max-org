---
const navItems = [
  { name: 'Home', href: '/' },
  { name: 'Talent', href: '/talent' },
  { name: 'How It Works', href: '/how-it-works' },
  { name: 'Partners', href: '/partners' },
  { name: 'About', href: '/about' },
  { name: 'Insights', href: '/blog' },
  { name: 'Contact', href: '/contact' }
];
---

<header class="bg-white shadow-sm sticky top-0 z-50 border-b border-gray-100">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex items-center space-x-3 group">
          <img 
            src="/maxsys-logo.png" 
            alt="Maxsys International Logo" 
            class="w-10 h-10 object-contain transition-transform duration-200 group-hover:scale-105"
            onerror="this.style.display='none'; this.nextElementSibling.style.display='flex'"
          />
          <!-- Fallback logo if image fails to load -->
          <div class="w-10 h-10 bg-gradient-to-br from-primary-600 to-secondary-600 rounded-xl flex items-center justify-center" style="display: none;">
            <span class="text-white font-bold text-lg">M</span>
          </div>
          <div class="flex flex-col">
            <span class="text-xl font-bold text-gray-900 leading-tight">Maxsys</span>
            <span class="text-xs text-gray-500 leading-tight">International</span>
          </div>
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden lg:block">
        <div class="flex items-center space-x-1">
          {navItems.map((item) => (
            <a 
              href={item.href} 
              class="text-gray-700 hover:text-primary-600 hover:bg-primary-50 px-4 py-2 rounded-lg text-sm font-medium transition-all duration-200"
            >
              {item.name}
            </a>
          ))}
        </div>
      </div>

      <!-- Right Side Actions -->
      <div class="hidden lg:flex items-center space-x-3">
        <!-- Login Dropdown -->
        <div class="relative">
          <button 
            type="button" 
            class="login-dropdown-button bg-gray-50 hover:bg-gray-100 text-gray-700 px-4 py-2 rounded-lg text-sm font-medium transition-colors duration-200 flex items-center space-x-2"
            aria-expanded="false"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            <span>Login</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          
          <div class="login-dropdown-menu absolute right-0 mt-2 w-56 bg-white rounded-xl shadow-lg border border-gray-200 hidden z-50">
            <div class="py-2">
              <a 
                href="https://hub.maxsys.org/wp-login.php" 
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 transition-colors duration-200"
              >
                <svg class="w-4 h-4 mr-3 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H8a2 2 0 01-2-2V8a2 2 0 012-2V6"></path>
                </svg>
                <div>
                  <div class="font-medium">Hub Portal</div>
                  <div class="text-xs text-gray-500">For freelancers</div>
                </div>
              </a>
              <a 
                href="https://hrm.maxsys.org/wp-login.php" 
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 transition-colors duration-200"
              >
                <svg class="w-4 h-4 mr-3 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                </svg>
                <div>
                  <div class="font-medium">HRM Portal</div>
                  <div class="text-xs text-gray-500">For partners</div>
                </div>
              </a>
            </div>
          </div>
        </div>

        <!-- Donate Button -->
        <a 
          href="/donate" 
          class="bg-primary-600 hover:bg-primary-700 text-white px-5 py-2 rounded-lg text-sm font-semibold transition-colors duration-200 shadow-sm"
        >
          Donate Now
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="lg:hidden">
        <button 
          type="button" 
          class="mobile-menu-button bg-gray-50 hover:bg-gray-100 inline-flex items-center justify-center p-2 rounded-lg text-gray-700 hover:text-primary-600 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary-500 transition-colors duration-200"
          aria-controls="mobile-menu" 
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div class="mobile-menu hidden lg:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 bg-white border-t border-gray-100">
        {navItems.map((item) => (
          <a 
            href={item.href} 
            class="text-gray-700 hover:text-primary-600 hover:bg-primary-50 block px-3 py-3 rounded-lg text-base font-medium transition-colors duration-200"
          >
            {item.name}
          </a>
        ))}
        
        <!-- Mobile Login Links -->
        <div class="border-t border-gray-200 pt-4 mt-4">
          <div class="space-y-1">
            <a 
              href="https://hub.maxsys.org/wp-login.php" 
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-700 hover:text-primary-600 hover:bg-primary-50 flex items-center px-3 py-3 rounded-lg text-base font-medium transition-colors duration-200"
            >
              <svg class="w-5 h-5 mr-3 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2-2v2m8 0V6a2 2 0 012 2v6a2 2 0 01-2 2H8a2 2 0 01-2-2V8a2 2 0 012-2V6"></path>
              </svg>
              Hub Portal Login
            </a>
            <a 
              href="https://hrm.maxsys.org/wp-login.php" 
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-700 hover:text-primary-600 hover:bg-primary-50 flex items-center px-3 py-3 rounded-lg text-base font-medium transition-colors duration-200"
            >
              <svg class="w-5 h-5 mr-3 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
              </svg>
              HRM Portal Login
            </a>
          </div>
        </div>
        
        <div class="border-t border-gray-200 pt-4 mt-4">
          <a 
            href="/donate" 
            class="bg-primary-600 hover:bg-primary-700 text-white block px-3 py-3 rounded-lg text-base font-semibold text-center transition-colors duration-200"
          >
            Donate Now
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
document.addEventListener('DOMContentLoaded', function() {
  // Mobile menu toggle
  const mobileMenuButton = document.querySelector('.mobile-menu-button');
  const mobileMenu = document.querySelector('.mobile-menu');
  
  if (mobileMenuButton && mobileMenu) {
    mobileMenuButton.addEventListener('click', function() {
      const isExpanded = mobileMenu.classList.contains('hidden');
      mobileMenu.classList.toggle('hidden');
      mobileMenuButton.setAttribute('aria-expanded', isExpanded.toString());
    });
  }

  // Login dropdown toggle
  const loginDropdownButton = document.querySelector('.login-dropdown-button');
  const loginDropdownMenu = document.querySelector('.login-dropdown-menu');
  
  if (loginDropdownButton && loginDropdownMenu) {
    loginDropdownButton.addEventListener('click', function(e) {
      e.stopPropagation();
      const isHidden = loginDropdownMenu.classList.contains('hidden');
      loginDropdownMenu.classList.toggle('hidden');
      loginDropdownButton.setAttribute('aria-expanded', (!isHidden).toString());
    });

    // Close dropdown when clicking outside
    document.addEventListener('click', function() {
      loginDropdownMenu.classList.add('hidden');
      loginDropdownButton.setAttribute('aria-expanded', 'false');
    });

    // Prevent dropdown from closing when clicking inside it
    loginDropdownMenu.addEventListener('click', function(e) {
      e.stopPropagation();
    });
  }
});
</script>